@model FITorg.Web.Areas.AdminUser.ViewModels.TreneriIndexVM
@{
    ViewData["Title"] = "Fitorg";
    Layout = "_LayoutAdmin";
}
<h2>Lista trenera</h2>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Lista trenera koji koriste aplikaciju
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ime i prezime</th>
                        <th>E-mail</th>
                        <th>Grad</th>
                        <th>Drzava</th>
                        <th>Spol</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var x in Model.Rows)
                {
                    <tr>
                        <td style="width: 19%">@x.ImePrezime</td>
                        <td style="width: 19%">@x.email</td>
                        <td style="width: 10%">@x.NazivGrada</td>
                        <td style="width: 17%">@x.NazivDrzave</td>
                        <td style="width: 5%">@x.Spol</td>
                        <td>
                            <a asp-action="Uredi" asp-controller="Treneri" asp-route-id="@x.TrenerId" class="btn btn-info font-sizes"><i class="fas fa-edit icons-margin-right"></i> Uredi</a>
                            <a asp-action="Obrisi" asp-controller="Treneri" asp-route-id="@x.TrenerId" class="btn btn-danger font-sizes"><i class="fas fa-minus icons-margin-right"></i> Obriši</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
